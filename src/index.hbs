        <h1 class="display-4">Joel <strong>Kirchartz</strong></h1>
        <p class="lead">Senior Full&ndash;Stack Developer</p>
      </div>
    </header>
    <div class="row">
      <main class="col-8">
      {{#each sections}}
        <section class="{{header.text}}">
          {{#with header}}
            <header class="row">
              <h2 class="h4 offset-2 col"><i class="fa fa-{{ icon }}"></i> <strong>{{ text }}</strong></h2>
            </header>
          {{/with}}
          {{#each items}}
            <article class="row">
              <time class="h6 col-2">
                {{ time }}
              </time>
              <div class="col-10">
                <h3 class="h6"><strong>{{ heading }}</strong></h3>
                <p class="lead">{{ subheading }}</p>
                <p>{{ description }}</p>
                {{#if clients}}
                  <p>
                    <ul>
                      <li><strong>Clients:</strong></li>
                      {{#each clients}}
                        <li class="list-item">{{this}}</li>
                      {{/each}}
                    </ul>
                  </p>
                {{/if}}
              </div>
            </article>
          {{/each}}
        </section>
      {{/each}}
