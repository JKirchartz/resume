    <title>JKirchartz Resume</title>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,800" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
    <script>
      window.addEventListener('load', function(){
        var items = document.querySelectorAll('.Experience article.row');
        var showItems = parseInt((window.location.hash).slice(1), 10);
        for (var i = 0; i < items.length; i++) {
          if ((i + 1) > showItems) {
            items[i].style.display = "none";
          }
        }
      });
    </script>
  </head>
  <body class="container-fluid">
    <header class="row">
      <div class="col-12 col-sm-2 offset-sm-1">
        <img src="https://i.imgur.com/NRbMgti.jpg" class="img-fluid rounded-circle" alt="JKirchartz Headshot">
      </div>
